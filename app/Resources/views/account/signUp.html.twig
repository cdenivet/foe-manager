{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
{% endblock %}

{% block body %}
    <div class="row my-4">
        <div class="col">
            <h1 class="mb-4">{{ 'signUp.title' | trans }}</h1>
                {{ form_start(form, {'attr' : {'novalidate' : 'novalidate'} }) }}

                        {{ form_label(form.username, 'login' | trans ) }}
                        {{ form_widget(form.username, {'attr' :
                            {
                                'placeholder' : 'enter.login' | trans,
                                'autofocus' : 'autofocus'
                            }
                        }) }}
                        {{ form_label(form.password, 'password' | trans ) }}
                        {{ form_widget(form.password, {'attr' :
                            {
                                'placeholder' : 'enter.password' | trans
                            }
                            })
                        }}
                        {{ form_label(form.email, 'email' | trans ) }}
                        {{ form_widget(form.email, {'attr' :
                            {
                                'placeholder' : 'enter.email' | trans
                            }
                            })
                        }}
                        <input type="submit" name="submit" value="{{ 'btn.validate' | trans }}" class="btn btn-info">
                        <a class="btn btn-danger" href="{{ path('homepage.index') }}">{{ 'btn.return' | trans }}</a>
                {{ form_end(form) }}

                {{ form_errors(form.username) }}
                {{ form_errors(form.password) }}
                {{ form_errors(form.email) }}
        </div>
    </div>
{% endblock %}
